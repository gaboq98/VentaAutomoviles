@model VentaAutomoviles.Models.FacturaViewModel

@{
    ViewBag.Title = "Create2";
}

<h2>Facturar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.IdAutomovil, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <p>@ViewBag.IdAutomovil</p>
            @Html.TextBoxFor(m => m.IdAutomovil, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.IdAutomovil, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.IdCliente, "Identificación Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdCliente", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdTipoPago, "Tipo de pago", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdTipoPago", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdTipoPago, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.IdSucursal, "Sucursal", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdSucursal", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdSucursal, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdEmpleado, "Empleado facturador", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdEmpleado", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdEmpleado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group p-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "IndexFacturador", "Home", new { @class = "btn btn-outline-primary mr-1" })
</div>
